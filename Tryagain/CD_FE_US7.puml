    + SideBar: Component
}

class App {
    - changeSorting : Function
    - setSearchText : Function
    - addTag : Function
    - toggleSwitch : Function
    --
    + NavBar: Component
    + Redux: Component
    + Router: Component
    + Alert: Component
    }
class CalendarPage {
    - events : Query
    --
    + Calendar: Component
    + Monthly: Component
    + Weekly: Component
    + Daily: Component
    + Select: Component
    + Navigate: Component
    + DayEventModal: Component

}
class EventPage {
    -Image : Img
    -Event : Event
    --
    + <color:blue>DateAndTimeBox : Component
    + LocationBox : Component
    + <color:red>AddToCalendar : Component
}

App*-- HomePage    
App*-- CalendarPage  
CalendarPage-- EventPage 
HomePage-- EventPage
